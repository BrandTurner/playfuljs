{
  "source": "./content",
  "destination": "./build",
  "metadata": {
    "title": "Hunter Loftis",
    "description": "Blog"
  },
  "plugins": {
    "metalsmith-drafts": true,
    "metalsmith-excerpts": true,
    "metalsmith-assets": {
      "source": "templates/styles",
      "destination": "styles"
    },
    "metalsmith-ignore": [
      "styles/!(global).styl"
    ],
    "metalsmith-stylus": {
      "paths": ["templates/styles"]
    },
    "metalsmith-markdown": {},
    "metalsmith-collections": {
      "articles": {
        "pattern": "articles/*",
        "sortBy": "date",
        "reverse": true
      }
    },
    "metalsmith-permalinks": {
      "pattern": ":title"
    },
    "metalsmith-templates": {
      "engine": "jade",
      "directory": "./templates"
    },
    "metalsmith-autoprefixer": {}
  }
}
