@import url('http://fonts.googleapis.com/css?family=Satisfy&text=PlayfulJS');
@import url('http://fonts.googleapis.com/css?family=Open+Sans:300,700');

*
  box-sizing border-box

html
  font-size 14px
  line-height 1.5

body
  background #ccc
  color #333
  font-family 'Open Sans', helvetica, arial, sans-serif
  font-weight 300
  margin 0
  padding 0

h1, h2, h3, h4, h5
  font-family 'Open Sans'
  font-weight 700
  color #333

h1
  padding 0
  margin 0

h2
  font-size 1.9rem
  margin 25px 0 10px 0

h4
  font-size 1rem
  margin 15px 0 5px 0

a
  color #ff0
  text-decoration none

